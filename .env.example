PORT=4000

# Either use DATABASE_URL or individual parts below
DATABASE_URL=postgres://postgres:postgres@localhost:5432/app_db

# Or individual variables (if you prefer):
# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=postgres
# PGDATABASE=app_db

# JWT
JWT_SECRET=change-me
JWT_EXPIRES_IN=8h

# SMTP for email sending (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASS=your_pass
EMAIL_FROM="Papeleria <no-reply@papeleria.com>"

# Google reCAPTCHA
RECAPTCHA_SECRET=6Leev7krAAAAAHf3zRyXhhopfvAqiFAsLizjjrYI

# Inactivity policies
LOCK_AFTER_MINUTES=1
AUTO_LOGOUT_AFTER_HOURS=8

# First-manager bootstrap
# Set a strong random value, used once to seed the first gerente account via /auth/bootstrap/manager
ADMIN_BOOTSTRAP_KEY=change-this-bootstrap-key

# Gmail API (OAuth2) â€” use this instead of SMTP vars above if sending via Gmail API
# Steps: Create OAuth2 Client (Web or Desktop) in Google Cloud, then obtain a refresh token
GMAIL_USER=your_account@gmail.com
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GMAIL_REFRESH_TOKEN=your_refresh_token
